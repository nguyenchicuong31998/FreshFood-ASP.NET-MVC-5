@using WebsiteThucPhamSach.Models;
@model List<CTHOADON>
<link href="~/Content/CssAdmin/CssHoaDon.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-lg-6 custom-color">
            <div class="title-hoadon">Chi tiết hóa đơn</div>
            <div class="content-hoadon">
                <p><span>Mã hóa đơn:</span> @ViewBag.MAHD</p>
                <p><span>Họ và tên:</span>  @ViewBag.TENKH</p>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MASP</td>
                                <td>@item.TENSP</td>
                                <td>@item.SOLUONG</td>
                                <td>@item.DONGIA</td>
                                <td>@item.THANHTIEN</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
